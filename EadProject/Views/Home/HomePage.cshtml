            <div class="row  text-center">
                <div class="col-md-4 m-0 gx-0 gy-0">
                    <div class="bg-image" style="height :200px">
                        <img src="~/Images/fantacy.jpg"
                         class="img-fluid"
                         alt="Sample"
                         style="width : 100%; height:100%;" asp-append-version="true" />
                        <div class="mask" style="background-color: rgba(0, 0, 0, 0.5);">
                            <div class="d-flex justify-content-center align-items-center h-100">
                                <p class="text-white mb-0 h2"><a class="text-decoration-none" onmouseover="this.style.color = 'yellow' " asp-controller="SignUp" asp-action="SignUpPage" onmouseout="this.style.color = 'white' " style="color:white;">Fantasy</a></p>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 m-0 gx-0 gy-0">
                    <div class="bg-image" style="height :200px">
                        <img src="~/Images/history.jpg"
                         class="img-fluid"
                         alt="Sample"
                         style="width : 100%; height:100%;" asp-append-version="true" />
                        <div class="mask" style="background-color: rgba(0, 0, 0, 0.5);">
                            <div class="d-flex justify-content-center align-items-center h-100">
                                <p class="text-white mb-0 h2">
                                    <a class="text-decoration-none"
                                   onmouseover="this.style.color = 'yellow' "
                                   onmouseout="this.style.color = 'white' " style="color:white;" asp-controller="SignUp" asp-action="SignUpPage">History</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 m-0 gx-0 gy-0">
                    <div class="bg-image" style="height :200px">
                        <img src="~/Images/Slide_3.jpg"
                         class="img-fluid"
                         alt="Sample"
                         style="width : 100%; height:100%;" asp-append-version="true" />
                        <div class="mask" style="background-color: rgba(0, 0, 0, 0.5);">
                            <div class="d-flex justify-content-center align-items-center h-100">
                                <p class="text-white mb-0 h1">
                                    <a class="text-decoration-none"
                                   onmouseover="this.style.color = 'yellow' "
                                   onmouseout="this.style.color = 'white' " style="color:white;" asp-controller="SignUp" asp-action="SignUpPage">All Books</a>
                                </p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <br /><br />
        <br />
        <div class="container pb-3">
            <h1 style="font-family: 'Permanent Marker', cursive; font-size:4vw; color: navy" class="text-center my-3">Our Books</h1>
            @{
            int count = 0;
        }
        @foreach (BookModel book in Model)
        {
            <div class="card col-md-3 mx-2 my-4" style="width: 18rem; display :inline-block;border:none;">
                @if(book.BookPictureURL == null)
                {
                <img class="card-img-top" src="~/Images/Slide_3.jpg" asp-append-version="true" alt="Card image cap" style="height: 10rem">

                }
                else
                {
                <img class="card-img-top" src=@book.BookPictureURL asp-append-version="true" alt="Card image cap" style="height: 10rem">
                }
                <div class="card-body text-center">
                    <h5 class="card-title" style="font-weight : bold">@book.BookName</h5>
                    <p>Author name : @book.BookAuthor</p>
                </div>
            </div>
            count++;
            if (count == 6)
            {
                break;
            }
        }
    </div>

</div>