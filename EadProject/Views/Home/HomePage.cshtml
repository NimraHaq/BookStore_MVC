@using EadProject.Models;
@model List<BookModel>

@{
    ViewData["Title"] = "Daastan Sara";
}


@section NavList
    {
    <partial name="_NavBarList" model="@new UserModel()" />
}




    <div style="background-color: rgb(245,245,245)
;">

        <!-- Slide show images  -->
        <div id="carouselExampleCaptions"
         class="carousel slide m-0"
         data-mdb-ride="carousel">
            <div class="carousel-indicators">
                <button type="button"
                    data-mdb-target="#carouselExampleCaptions"
                    data-mdb-slide-to="0"
                    class="active"
                    aria-current="true"
                    aria-label="Slide 1"></button>
                <button type="button"
                    data-mdb-target="#carouselExampleCaptions"
                    data-mdb-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button"
                    data-mdb-target="#carouselExampleCaptions"
                    data-mdb-slide-to="2"
                    aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/slide1.jpg"
                     class="d-block w-100 img-fluid"
                     style="height: 40vw; width: 100%; filter: brightness(50%)"
                     alt="Wild Landscape"
                     asp-append-version="true" />
                    <div class="carousel-caption d-none d-md-block mx-1">
                        <blockquote class="blockquote"
                                style="
                font-family: 'Permanent Marker', cursive;
                font-size: xx-large;
              ">
                            We read to know we are not alone. <i>—C.S. Lewis</i>
                        </blockquote>
                        <p style="font-size: x-large" class="mt-4 mb-4">
                            Start your journey with us!
                        </p>
                        <a class="btn btn-warning mx-2 mb-4 btn-lg" asp-controller="SignUp" asp-action="SignUpPage">Sign-Up</a>
                        <a class="btn btn-outline-warning mx-2 mb-4 btn-lg" asp-controller="Login" asp-action="LoginPage">
                            Login
                        </a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/slide2.jpg"
                     class="d-block w-100 img-fluid"
                     style="height: 40vw; width: 100%; filter: brightness(50%)"
                     alt="Camera" asp-append-version="true" />
                    <div class="carousel-caption d-none d-md-block mx-1">
                        <blockquote class="blockquote"
                                style="
                font-family: 'Permanent Marker', cursive;
                font-size: xx-large;
              ">
                            We read to know we are not alone. <i>—C.S. Lewis</i>
                        </blockquote>
                        <p style="font-size: x-large" class="mt-4 mb-4">
                            Start your journey with us!
                        </p>
                        <a class="btn btn-warning mx-2 mb-4 btn-lg" asp-controller="SignUp" asp-action="SignUpPage">Sign-Up</a>
                        <a class="btn btn-outline-warning mx-2 mb-4 btn-lg" asp-controller="Login" asp-action="LoginPage">
                            Login
                        </a>
                    </div>

                </div>
                <div class="carousel-item">
                    <img src="~/images/Slide_3.jpg"
                     class="d-block w-100 img-fluid"
                     style="height: 40vw; width: 100%; filter: brightness(50%)"
                     alt="Exotic Fruits" asp-append-version="true" />
                    <div class="carousel-caption d-none d-md-block mx-1">
                        <blockquote class="blockquote"
                                style="
                font-family: 'Permanent Marker', cursive;
                font-size :3vw;
              ">
                            Welcome to Daastan Sara
                        </blockquote>
                        <p style="font-size: x-large" class="mt-4 mb-4">
                            Get books of your choice. Search now!
                        </p>
                        <a class="btn btn-primary mx-2 mb-4 btn-lg" asp-controller="SignUp" asp-action="SignUpPage">Search</a>
                    </div>

                </div>
            </div>
            <button class="carousel-control-prev"
                type="button"
                data-mdb-target="#carouselExampleCaptions"
                data-mdb-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next"
                type="button"
                data-mdb-target="#carouselExampleCaptions"
                data-mdb-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

