@model EadProject.Models.Order

@{
    ViewData["Title"] = "Order Details";

}

@section NavList
    {
    <partial name="_NavBarSeller" model="@ViewBag.user" />
}

<div class="catalog">
    <div class="container pt-3 pb-5" style=" width: 60%;">

        <h1 style="font-family: 'Permanent Marker', cursive; font-size:4vw; color: navy" class="text-center mb-3 mt-5">Order Details</h1>
        <h3 style="font-weight : bold">Book name </h3>
        <p style="color:blue"> by : BookAuthor</p>
        <p>shortDescription</p>
        <hr />
        <p><span style="font-weight:bold">Category - </span>Category</p>
        <p><span style="font-weight:bold">Number of pages - </span>NumberOfPages</p>
        <p><span style="font-weight:bold">Langauge - </span>Language</p>
        <hr />
        <p><span style="font-weight:bold">Quantity :  </span>Quantity</p>
        <p><span style="font-weight:bold">DeliveryAdress :  </span>Address</p>
        <p><span style="font-weight:bold">Delivery status :  </span>true/false</p>
    

    <br />
    <br />

    <h1 style="font-family: 'Permanent Marker', cursive; font-size:4vw; color: navy" class="text-center mb-3 mt-5">Change Order Delivery Status</h1>

    <form class="pt-3 pb-5" method="post">
        <div class="form-check my-3">
            <input class="form-check-input" type="radio" name="deliveryStatus" value="True" checked>
            <label class="form-check-label" for="buyer">
                Order Delivered
            </label>
        </div>
        <div class="form-check my-3">
            <input class="form-check-input" type="radio" name="deliveryStatus" value="False">
            <label class="form-check-label" for="seller">
                Order not delivered
            </label>
        </div>
        <input type="hidden" name="sellerID" value="@ViewBag.user.Id" />

        <input type="submit" value="Click to update Status" class="text-center btn my-2 btn-lg " style="margin-left : 45%;background-color :navy;color:white;" />
    </form>
    </div>
</div>

